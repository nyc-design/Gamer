# Development Dockerfile - Includes dev tools but not heavy test dependencies
FROM python:3.11-slim

WORKDIR /app

# Install Poetry
RUN pip install poetry

# Copy dependency files
COPY pyproject.toml poetry.lock ./

# Install production + dev dependencies (no test dependencies by default)
RUN poetry config virtualenvs.create false \
    && poetry install --with dev --without test,integration,performance,reporting

# Copy application code
COPY . .

# Development server with hot reload
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]